<tool id="CNVkit coverage" name="CNVkit coverage" version="0.9.9" python_template_version="3.5">
    <description>Calculate coverage in the given regions from BAM read depths.</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="xrefs"/>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[  
        ln -s '$input_bam_file' ./tumor.bam &&
        ln -s '$input_interval_bed' ./capture.split.bed &&
        #if $reference_source.fasta
            #if str($reference_source.ref_selector) == 'history':
                ln -s '$reference_source.fasta' ./genome.fa &&
                samtools faidx ./genome.fa 2>&1 || echo 'Error running samtools faidx for indexing fasta reference for CNVkit' >&2 &&
            #else
                ln -s '$reference_source.fasta.fields.path' ./genome.fa &&
                cp '${reference_source.fasta.fields.path}.fai' ./genome.fa.fai &&
            #end if
        #end if
        cnvkit.py coverage
            '$input_bam_file'
            '$input_interval_bed'
            --output '$output_setting.output'
    ]]></command>
        <configfiles>
        <configfile name="script_file"><![CDATA[
#import os
#set galaxy_slots = os.getenv("GALAXY_SLOTS", 4)
--processes $galaxy_slots
'$input_bam_file'
'$input_interval_bed'
--count '$count'
--min-mapq '$min_mapq'
--output '$output_setting.output'
        ]]></configfile>
    </configfiles>
    <inputs>
        <param name="input_bam_file" type="data" format="bam" multiple="false" label="CNS file" help="" />
        <param name="input_interval_bed" type="data" format="bed" multiple="false" label="CNS file" help="" />
        <expand macro="reference_interface"/>
        <param argument="--count" type="boolean" checked="false" truevalue="TRUE" falsevalue="FALSE" label="Get read depths by counting read midpoints within each bin" help="(An alternative algorithm)." />
        <param argument="--min-mapq" optional="true" type="float" label="Minimum mapping quality score to count a read for coverage depth" min="0" max="60" value="0" help="(phred scale 0-60)" />
        <section name="output_setting" title="Change output file name" expanded="false">
            <param argument="--output" optional="true" type="text" label="Output file name" value="Sample.targetcoverage.cnn" help="File_name.cnn" />
        </section>
    </inputs>
    <outputs>
        <data name="out_capture_target_coverage" format="tabular" label="${tool.name} on ${on_string}: Sample Target coverage" from_work_dir="tumor.targetcoverage.cnn" />
    </outputs>
    <tests>
        <test expect_num_outputs="1">
            <param name="input_bam_file" ftype="bam" value="tumor.bam" />
            <param name="input_interval_bed" ftype="bed" value="capture.split.bed" />
            <param name="output" value="tumor.targetcoverage.cnn" />
            <output name="out_capture_target_coverage" file="tumor.targetcoverage.cnn" /> 
        </test>
    </tests>
    <help><![CDATA[
    Calculate coverage in the given regions from BAM read depths.
    ]]></help>
    <citations>
        <citation type="doi">10.1371/journal.pcbi.1004873</citation>
    </citations>
</tool>
