<tool id="rna_stardiploid" name="RNA STAR Diploid" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@" license="MIT">
    <description>mapping RNA-seq reads to a diploid genome</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <command><![CDATA[
        @TEMPINDEX@
        STAR
        @REFGENOMEHANDLING@
    ]]></command>
    <inputs>
        <param argument="--genomeTransformVC" type="data" format="vcf" label="VCF file with diploid SNVs and InDels" help="The homozygous         and heterozygous alleles from this VCF will be inserted into the reference genome to create a transformed genome with two haplotypes"/>
    </inputs>
    <outputs>
        <data format="txt" name="output_log" label="${tool.name} on ${on_string}: log" from_work_dir="Log.final.out">
            <expand macro="dbKeyActions" />
        </data>
    </outputs>
    <tests>
        <test expect_num_outputs="7"/>
    </tests>
<help><![CDATA[
STAR_ 

.. _STAR: https://github.com/alexdobin/STAR

        ]]></help>
    <expand macro="citations"/>
</tool>
