<tool id="CNVkit target" name="CNVkit target" version="0.9.9" python_template_version="3.5">
    <description>Prepare a BED file of baited regions for use with CNVkit.</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="xrefs"/>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[  
        ln -s '$input_file' ./capture.bed &&
        cnvkit.py target
            ./capture.bed
            --output '$output_setting.output'
    ]]></command>
        <configfiles>
        <configfile name="script_file"><![CDATA[
'$input_file'
--annotate '$annotate'
--short-names '$short_names'
--split '$split'
--avg-size $avg_size
--output '$output_setting.output'
        ]]></configfile>
    </configfiles>
    <inputs>
        <param name="input_file" type="data" format="bed" multiple="false" label="Input BED file" help="" />
        <param argument="--annotate" optional="true" type="data" format="txt" multiple="false" label="Use gene models from this file to assign names to the target regions" help="Format: UCSC refFlat.txt or ensFlat.txt file (preferred), or BED, interval list, GFF, or similar" />
        <param argument="--short-names" type="boolean" checked="false" truevalue="TRUE" falsevalue="FALSE" label="Reduce multi-accession bait labels to be short and consistent" help="" />
        <param argument="--split" type="boolean" checked="false" truevalue="TRUE" falsevalue="FALSE" label="Split large tiled intervals into smaller, consecutive targets" help="" />
        <param argument="--avg-size" optional="true" type="float" label="Average size of split target bins" value="266.6666666666667" help="Results are approximate" />
        <section name="output_setting" title="Change output file name" expanded="false">
            <param argument="--output" optional="true" type="text" label="Output file name" value="capture.split.bed" help="File_name.bed" />
        </section>
    </inputs>
    <outputs>
        <data name="out_capture_target" format="bed" label="${tool.name} on ${on_string}: capture split" from_work_dir="capture.split.bed" />
    </outputs>
    <tests>
        <test expect_num_outputs="1">
            <param name="input_file" ftype="bed" value="capture.bed" />
            <param name="output" value="capture.split.bed" />
            <output name="out_capture_target" file="capture.split.bed" /> 
        </test>
    </tests>
    <help><![CDATA[
    Prepare a BED file of baited regions for use with CNVkit.
    ]]></help>
    <citations>
        <citation type="doi">10.1371/journal.pcbi.1004873</citation>
    </citations>
</tool>
