<tool id="CNVkit scatter" name="CNVkit scatter" version="0.9.9" python_template_version="3.5">
    <description>Plot bin-level log2 coverages and segmentation calls together.</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="xrefs"/>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[  
        ln -s '$input_cnr_file' ./tumor.cnr &&
        cnvkit.py scatter
            ./tumor.cnr
            --output '$output_setting.output'
    ]]></command>
        <configfiles>
        <configfile name="script_file"><![CDATA[
'$input_cnr_file' 
--output '$output_setting.output'
--segment '$advanced_settings.segment' 
--chromosome '$advanced_settings.chromosome'
--gene '$advanced_settings.gene'
--range-list '$advanced_settings.range_list'
--width  $advanced_settings.width

--antitarget-marker '$advanced_settings.plot_aesthetics.antitarget_marker'
--by-bin '$advanced_settings.plot_aesthetics.by_bin'
--segment-color '$advanced_settings.plot_aesthetics.segment_color'
--title '$advanced_settings.plot_aesthetics.title'
--trend '$advanced_settings.plot_aesthetics.trend'
--y-max $advanced_settings.plot_aesthetics.y_max
--y-min $advanced_settings.plot_aesthetics.y_min

--vcf '$advanced_settings.additional_SNP_allelic_process.vcf'
--sample-id '$advanced_settings.additional_SNP_allelic_process.sample_id'
--normal-id '$advanced_settings.additional_SNP_allelic_process.normal_id'
--min-variant-depth $advanced_settings.additional_SNP_allelic_process.min_variant_depth
--zygosity-freq $advanced_settings.additional_SNP_allelic_process.zygosity_freq
        ]]></configfile>
    </configfiles>
    <inputs>
        <param name="input_cnr_file" type="data" format="tabular" multiple="false" label="cnn file" help="" />
        <section name="advanced_settings" title="Advanced settings" expanded="false">
            <expand macro="optional" />
            <section name="plot_aesthetics" title="Plot aesthetics" expanded="false">
              <expand macro="plot" />
            </section>
            <section name="additional_SNP_allelic_process" title="Plot aesthetics" expanded="false">
              <expand macro="additionally_SNP_process" />
            </section>
        </section>
        <section name="output_setting" title="Change output file name" expanded="false">
            <param argument="--output" optional="true" type="text" label="Output file name" value="Sample-scatter.png" help="File_name.png" />
        </section>     
    </inputs>
    <outputs>
        <data name="out_scatter_file" format="png" label="${tool.name} on ${on_string}: diagram pdf file" from_work_dir="tumor-scatter.png" />
    </outputs>
    <tests>
        <test expect_num_outputs="1">
            <param name="input_cnr_file" ftype="tabular" value="tumor.cnr" />
            <param name="output" value="tumor-scatter.png" />
            <output name="out_scatter_file" file="tumor-scatter.png" /> 
        </test>
    </tests>
    <help><![CDATA[
    tool id under wrapping
    ]]></help>
    <citations>
        <citation type="doi">10.1371/journal.pcbi.1004873</citation>
    </citations>
</tool>
