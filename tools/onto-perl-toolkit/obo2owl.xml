<tool id="onto_tk_obo2owl" name="Convert OBO to OWL" version="@VERSION@.0">
  <description></description>
    <expand macro="requirements" />
    <expand macro="stdio" />
    <macros>
        <import>onto_macros.xml</import>
    </macros>
  <command>
    obo2owl.pl
        $input_ontology
        "$url"
        "$oboinowlurl" > $output
  </command>
  <inputs>
    <expand macro="input_ontology" />
    <param name="url" type="text" size="50" value="http://" label="URL" />
    <param name="oboinowlurl" type="text" size="50" value="http://" label="OBOinOWL URL" />
  </inputs>
  <outputs>
    <data format="owl" name="output" />
  </outputs>

  <tests>
    <test>
      <param name="input_ontology" value="pre_cco_core.obo"/>
      <output name="out_file" file="pre_cco_core.owl"/>
    </test>
  </tests>

  <help>
This tool transforms an OBO formatted ontology (such as the Gene Ontology) to OWL.

    </help>
    <expand macro="citations" />
</tool>

