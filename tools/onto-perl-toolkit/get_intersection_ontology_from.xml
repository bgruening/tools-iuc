<tool id="onto_tk_get_intersection_ontology_from" name="Gets an intersection ontology from given OBO ontologies" version="@VERSION@.0">
  <description>Provides an intersection of the given ontologies (in OBO format)</description>
    <expand macro="requirements" />
    <expand macro="stdio" />
    <macros>
        <import>onto_macros.xml</import>
    </macros>
  <command>get_intersection_ontology_from.pl $input_ontology1 $input_ontology2 > $output</command>
  <inputs>
    <param format="text" name="input_ontology1" type="data" label="Input Ontology file 1:"/>
    <param format="text" name="input_ontology2" type="data" label="Input Ontology file 2:"/>
  </inputs>
  <outputs>
    <data format="text" name="output" />
  </outputs>

  <tests>
    <test>
    </test>
  </tests>

  <help>

Provides an intersection of the given ontologies (in OBO format)

    </help>
    <expand macro="citations" />
</tool>
