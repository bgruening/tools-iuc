<tool id="onto_tk_get_intersection_ontology_from" name="Gets an intersection ontology" version="@VERSION@.0">
  <description>from given OBO ontologies</description>
    <expand macro="requirements" />
    <expand macro="stdio" />
    <macros>
        <import>onto_macros.xml</import>
    </macros>
  <command>
    $__tool_directory__/get_intersection_ontology_from.pl
        $input_ontology
        $input_ontology2 > $output
  </command>
  <inputs>
    <expand macro="input_ontology" />
    <param name="input_ontology2" format="obo" type="data" label="Ontology file to intersect with"/>
  </inputs>
  <outputs>
    <data format="text" name="output" />
  </outputs>
  <tests>
    <test>
      <param name="input_ontology" value="pre_cco.obo"/>
      <param name="input_ontology2" value="pre_cco.obo"/>
      <output name="out_file" file="intersection_ontology_from_results1.txt"/>
    </test>
  </tests>

  <help>

Provides an intersection of the given ontologies (in OBO format)

    </help>
    <expand macro="citations" />
</tool>
