    <expand macro="requirements" />
    <expand macro="stdio" />
    <macros>
        <import>onto_macros.xml</import>
    </macros>
  <command>get_intersection_ontology_from.pl $input_ontology $input_ontology2 > $output</command>
  <inputs>
    <expand macro="input_ontology" />
    <param format="text" name="input_ontology2" type="data" label="Input Ontology file 2:"/>
  </inputs>
  <outputs>
    <data format="text" name="output" />
  </outputs>

  <tests>
    <test>
    </test>
  </tests>

  <help>

Provides an intersection of the given ontologies (in OBO format)

    </help>
    <expand macro="citations" />
</tool>
