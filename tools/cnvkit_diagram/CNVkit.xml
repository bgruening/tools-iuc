<tool id="CNVkit diagram" name="CNVkit diagram" version="0.9.9" python_template_version="3.5">
    <description>Draw copy number (either individual bins (.cnn, .cnr) or segments (.cns)) on chromosomes as an ideogram</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="xrefs"/>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[  
        ln -s '$input_cnr_file' ./tumor.cnr &&
        cnvkit.py diagram
            ./tumor.cnr
            --output '$output_setting.output'
    ]]></command>
        <configfiles>
        <configfile name="script_file"><![CDATA[
'$input_cnr_file' 
--output '$output_setting.output'
--segment '$advanced_settings.segment'
--threshold $advanced_settings.threshold
--min-probes $advanced_settings.min_probes
--male-reference '$advanced_settings.male_reference'
--sample-sex '$advanced_settings.sample_sex'
--no-shift-xy '$advanced_settings.no_shift_xy'
--title '$plot_aesthetics.title'
        ]]></configfile>
    </configfiles>
    <inputs>
        <param name="input_cnr_file" type="data" format="tabular" multiple="false" label="cnn file" help="" />
        <section name="advanced_settings" title="Advanced settings" expanded="false">
            <expand macro="optional" />
        </section>    
        <section name="plot_aesthetics" title="Plot aesthetics" expanded="false">
            <expand macro="plot" />
        </section>
        <section name="output_setting" title="Change output file name" expanded="false">
            <param argument="--output" optional="true" type="text" label="Output file name" value="Sample-diagram.pdf" help="File_name.pdf" />
        </section>
    </inputs>
    <outputs>
        <data name="out_diagram_file" format="pdf" label="${tool.name} on ${on_string}: diagram pdf file" from_work_dir="tumor-diagram.pdf" />
    </outputs>
    <tests>
        <test expect_num_outputs="1">
            <param name="input_cnr_file" ftype="tabular" value="tumor.cnr" />
            <param name="output" value="tumor-diagram.pdf" />
            <output name="out_diagram_file" file="tumor-diagram.pdf" ftype="pdf" compare="sim_size" > 
                <has_size value="6000" delta="1000" negate="1" />
            </output>
        </test>
    </tests>
    <help><![CDATA[
    Draw copy number (either individual bins (.cnn, .cnr) or segments (.cns)) on chromosomes as an ideogram
    ]]></help>
    <citations>
        <citation type="doi">10.1371/journal.pcbi.1004873</citation>
    </citations>
</tool>