<tool id="CNVkit segment" name="CNVkit segment" version="0.9.9" python_template_version="3.5">
    <description>Infer discrete copy number segments from a given coverage table</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="xrefs"/>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[  
        ln -s '$filename' ./tumor.cnr &&
        cnvkit.py segment
            ./tumor.cnr
            --output '$output_setting.output'
    ]]></command>
        <configfiles>
        <configfile name="script_file"><![CDATA[
'$filename' 
--output '$output_setting.output'
--dataframe $advanced_settings.dataframe'    
#if $advanced_settings.method == "cbs"
    #set $method_val = "cbs"
--method '$method_val'
#else
--method '$advanced_settings.method'
#end if
--threshold '$advanced_settings.threshold'
--drop-low-coverage '$advanced_settings.drop_low_coverage'
--drop-outliers $advanced_settings.drop_outliers
#####--rscript-path
######--processes '$advanced_settings.processes'
--smooth-cbs '$advanced_settings.smooth_cbs'
--vcf '$additional_SNP_allelic_process.vcf'
--sample-id '$additional_SNP_allelic_process.sample_id'
--normal-id '$additional_SNP_allelic_process.normal_id'
--min-variant-depth $.additional_SNP_allelic_process.min_variant_depth
--zygosity-freq $additional_SNP_allelic_process.normal_id
        ]]></configfile>
    </configfiles>
    <inputs>
        <param name="filename" type="data" format="tabular" multiple="false" label="Input CNR file" help="" />
        <section name="additional_SNP_allelic_process" title="additional process for SNP b_allele frequencies" expanded="false">
            <expand macro="additionally_SNP_process" />
        </section>
        <section name="advanced_settings" title="Advanced settings" expanded="false">
            <expand macro="optional" />
        </section>
        <section name="output_setting" title="Change output file name" expanded="false">
            <param argument="--output" optional="true" type="text" label="Output file name" value="Sample.cns" help="File_name.cns" />
        </section>
    </inputs>
    <outputs>
        <data name="out_sample_segment" format="tabular" label="${tool.name} on ${on_string}: Sample segment" from_work_dir="tumor.cns" />
    </outputs>
    <tests>
        <test expect_num_outputs="1">
            <param name="filename" ftype="tabular" value="tumor.cnr" />
            <param name="output" value="tumor.cns" />
            <output name="out_sample_segment" file="tumor.cns" /> 
        </test>
    </tests>
    <help><![CDATA[
    Infer discrete copy number segments from a given coverage table
    ]]></help>
    <citations>
        <citation type="doi">10.1371/journal.pcbi.1004873</citation>
    </citations>
</tool>
