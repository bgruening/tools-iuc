            <param name="database" value="2021-07-20-120000"/>
            <param name="busco_db" value="insecta"/>
            <output_collection name="funannotate_outputs" type="list">
                <element name="Genus_species.gbk">
                    <assert_contents>
                        <has_text text="DEFINITION  Genus species."/>
                    </assert_contents>
