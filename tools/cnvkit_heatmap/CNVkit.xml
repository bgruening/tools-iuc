<tool id="CNVkit heatmap" name="Cnvkit heatmap" version="0.9.9" python_template_version="3.5">
    <description>Draw copy number (either bins (.cnn, .cnr) or segments (.cns)) for multiple samples as a heatmap.</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="xrefs"/>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[  
        ln -s '$input_cns_file' ./tumor.cns &&
        cnvkit.py heatmap
            ./tumor.cns
            --output '$output_setting.output'
    ]]></command>
        <configfiles>
        <configfile name="script_file"><![CDATA[
'$input_cns_file' 
--output '$output_setting.output'
--by-bin '$advanced_settings.by_bin'
--chromosome '$advanced_settings.chromosome'
--desaturate '$advanced_settings.desaturate'
--male-reference '$advanced_settings.male_reference'
--sample-sex '$advanced_settings.sample_sex'
--no-shift-xy '$advanced_settings.no_shift_xy'

        ]]></configfile>
    </configfiles>
    <inputs>
        <param name="input_cns_file" type="data" format="cns" multiple="false" label="cns sample file" help="" />
        <section name="advanced_settings" title="Advanced settings" expanded="false">
            <expand macro="optional" />
        </section>
        <section name="output_setting" title="Change output file name" expanded="false">
            <param argument="--output" optional="true" type="text" label="Output file name" value="Sample-heatmap.png" help="File_name.png" />
        </section>      
    </inputs>
    <outputs>
        <data name="out_heatmap_png" format="png" label="${tool.name} on ${on_string}: Heatmap png file" from_work_dir="tumor-heatmap.png" />
    </outputs>
    <tests>
        <test expect_num_outputs="1">
            <param name="input_cns_file" ftype="tabular" value="tumor.cns" />
            <param name="output" value="tumor-heatmap.png" />
            <output name="out_heatmap_png" file="tumor-heatmap.png" /> 
        </test>
    </tests>
    <help><![CDATA[
    Get an overview of the larger-scale CNVs in a cohort
    ]]></help>
    <citations>
        <citation type="doi">10.1371/journal.pcbi.1004873</citation>  
    </citations>
</tool>
