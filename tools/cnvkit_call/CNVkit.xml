<tool id="CNVkit call" name="CNVkit call" version="0.9.9" python_template_version="3.5">
    <description>Given segmented log2 ratio estimates (.cns), derive each segment’s absolute integer copy number</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="xrefs"/>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[  
        ln -s '$input_sample_file' ./tumor.cns &&
        cnvkit.py call
            ./tumor.cns
    ]]></command>
        <configfiles>
        <configfile name="script_file"><![CDATA[
'$input_sample_file'        
#if $advanced_settings.method == "threshold"
    #set $method_val = "threshold"
--method '$method_val'
#else
--method '$advanced_settings.method'
#end if

#if $advanced_settings.center == "cbs"
    #set $center_val = "cbs"
--center '$center_val'
#else
--center '$advanced_settings.center'
#end if
--thresholds '$advanced_settings.thresholds'
--center-at '$advanced_settings.center_at'
--filter '$advanced_settings.filter'
--ploidy $advanced_settings.ploidy
--purity $advanced_settings.purity
--drop-low-coverage '$advanced_settings.drop_low_coverage'
--sample-sex '$advanced_settings.sample_sex'
--male-reference '$advanced_settings.male_reference'
--vcf '$additional_SNP_allelic_process.vcf'
--sample-id '$additional_SNP_allelic_process.sample_id'
--normal-id '$additional_SNP_allelic_process.normal_id'
--min-variant-depth $.additional_SNP_allelic_process.min_variant_depth
--zygosity-freq $additional_SNP_allelic_process.normal_id
        ]]></configfile>
    </configfiles>
    <inputs>
        <param name="input_sample_file" type="data" format="tabular" multiple="false" label="CNS file" help="" />
        <section name="additional_SNP_allelic_process" title="additional SNP b_allele frequencies process" expanded="false">
            <expand macro="additionally_SNP_process" />
        </section>
        <section name="advanced_settings" title="Advanced settings" expanded="false">
            <expand macro="optional" />
        </section>
    </inputs>
    <outputs>
        <data name="out_sample_call" format="tabular" label="${tool.name} on ${on_string}: Sample Bintest " from_work_dir="tumor.call.cns" />
    </outputs>
    <tests>
        <test expect_num_outputs="1">
            <param name="input_sample_file" ftype="tabular" value="tumor.cns" />
            <output name="out_sample_call" file="tumor.call.cns" /> 
        </test>
    </tests>
    <help><![CDATA[
    Given segmented log2 ratio estimates (.cns), derive each segment’s absolute integer copy number
    ]]></help>
    <citations>
        <citation type="doi">10.1371/journal.pcbi.1004873</citation>
    </citations>
</tool>
