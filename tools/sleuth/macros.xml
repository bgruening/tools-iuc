<macros>
    <xml name="requirements">
        <requirements>
            <requirement type="package" version="@TOOL_VERSION@">r-sleuth</requirement>
            <requirement type="package" version="1.0.1">r-wasabi</requirement>
            <requirement type="package" version="0.2.0">r-annotables</requirement>
            <requirement type="package" version="2.2.1">r-argparse</requirement>
            <requirement type="package" version="2.0.0">r-tidyverse</requirement>
        </requirements>
    </xml>
    <token name="@TOOL_VERSION@">0.30.1</token>
    <token name="@SUFFIX_VERSION@">0</token>
    <xml name="citations">
        <citations>
            <citation type="doi">10.1038/nmeth.4324</citation>
        </citations>
    </xml>
    <xml name="xrefs">
        <xrefs>
            <xref type="bio.tools">sleuth</xref>
        </xrefs>
    </xml>
    <xml name="macro_selector" token_format="">
        <section name="first_factor" title="1: Factor level" expanded="true">
            <param name="factorLevel" type="text" value="FactorLevel" label="Specify a factor level, typical values could be 'tumor' or 'treated'"
                help="Only letters, numbers and underscores will be retained in this field">
                <sanitizer>
                    <valid initial="string.letters,string.digits"><add value="_" /></valid>
                </sanitizer>
            </param>
            <param name="trans_counts" type="data" format="@FORMAT@" multiple="true" label="Transcript-level expression measurements"/> 
        </section>
        <section name="second_factor" title="2: Factor level" expanded="true">
            <param name="factorLevel" type="text" value="FactorLevel" label="Specify a factor level, typical values could be 'tumor' or 'treated'"
                help="Only letters, numbers and underscores will be retained in this field">
                <sanitizer>
                    <valid initial="string.letters,string.digits"><add value="_" /></valid>
                </sanitizer>
            </param>
            <param name="trans_counts" type="data" format="@FORMAT@" multiple="true" label="Transcript-level expression measurements"/> 
        </section>
    </xml>
</macros>
