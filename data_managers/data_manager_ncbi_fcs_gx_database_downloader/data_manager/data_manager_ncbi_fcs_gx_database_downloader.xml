<tool id="data_manager_ncbi_fcs_gx_database_downloader" name="NCBI FCS GX database downloader" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" python_template_version="3.5" profile="@PROFILE@">
    <description>Downoad the NCBI FCS GX database</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <command detect_errors="exit_code"><![CDATA[
    ]]></command>
    <inputs>
        <param argument="--mft" type="text" label="Location of manifest file"
               value="https://ftp.ncbi.nlm.nih.gov/genomes/TOOLS/FCS/database/latest/all.manifest"
               help="URL or pathname" />
        <param argument="--dir" type="text" label="Location for local copy of database" help="pathname" />
    </inputs>
    <outputs>
        <data name="out_file" format="data_manager_json" label="${tool.name}" />
    </outputs>
    <help><![CDATA[
    ]]></help>
    <expand macro="citations" />
</tool>
