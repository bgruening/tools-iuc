<tool id="data_manager_compleasm" name="compleasm data manager" version="0.2.5" tool_type="manage_data" profile="20.01">
    <requirements>
        <requirement type="package" version="0.2.4">compleasm</requirement>
    </requirements>
    <version_command></version_command>
    <command detect_errors="exit_code"><![CDATA[
        python '$__tool_directory__/compleasm.py'
        --output-dir '$output_dir'
        --name '$name'
        --json '$output_file'
    ]]></command>
    <inputs>
        <param name="output_dir" type="text" label="Output Directory" value="" />
        <param name="name" type="text" label="lineage name" value="" />
    </inputs>
    
    <outputs>
        <data name="output_file" format="data_manager_json"/>
    </outputs>

    <tests>
        <test>
            <param name="output_dir" value="mb_downloads"/>
            <param name="name" value="eukaryota"/>
            <output name="output_file"/>
        </test>
    </tests>
    
    <help><![CDATA[
        This datamanager downloads the lines available for Compleasm.
    ]]></help>
    <citations>
        <citation type="doi">10.1101/2023.06.03.543588</citation>
    </citations>
</tool>