<tool id="data_manager_compleasm" name="compleasm data manager" version="0.2.5" tool_type="manage_data" profile="20.01">
    <requirements>
        <requirement type="package" version="0.2.5">compleasm</requirement>
    </requirements>
    <version_command></version_command>
    <command detect_errors="exit_code"><![CDATA[
        python '$__tool_directory__/compleasm.py'
        --output-dir '$output_dir'
        --name '$name'
        --json '$output_file'
    ]]></command>
    <inputs>
        <param name="output_dir" type="text" label="Output Directory" value=""/>
        <param name="name" type="select" multiple="true" label="Select Lineage">
            <option value="aconoidasida">Aconoidasida</option>
