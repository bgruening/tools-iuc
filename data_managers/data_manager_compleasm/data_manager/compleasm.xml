    <outputs>
        <data name="output_file" format="data_manager_json"/>
    </outputs>

    <tests>
        <test>
            <param name="output_dir" value="mb_downloads"/>
            <param name="name" value="eukaryota,aves"/>
            <output name="output_file">
                <assert_contents>
                    <has_text text="eukaryota"/>
                    <has_text text="aves"/>
                    <has_text text="data_tables"/>
                </assert_contents>
            </output>
        </test>
    </tests>
    
